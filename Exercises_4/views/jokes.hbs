            Add Joke to data base:<br>
            <input type="text" name="newJoke" value="">
            <br><br>
            <input type="submit" value="Submit">
        </form>
    {{/if}}
</div>

{{#each jokes}}
    <p>{{@index}}. {{this}}</p>
{{/each}}

